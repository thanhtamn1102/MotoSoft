<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="CENTER" spacing="15.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: white; -fx-border-color: #EDEDED;" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER">
         <children>
            <CheckBox id="ckbSelect" fx:id="cbkSelect" focusTraversable="false" mnemonicParsing="false" style="-fx-background-color: white;" />
         </children>
      </VBox>
      <ImageView id="imageView" fx:id="imageView" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="CENTER_LEFT" spacing="8.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox>
               <children>
                  <Label id="lblTenSanPham" fx:id="lblTenSanPham" text="Tên sản phẩm" textFill="#58585a">
                     <font>
                        <Font name="Segoe UI Semibold" size="13.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox spacing="50.0">
               <children>
                  <VBox spacing="7.0">
                     <children>
                        <HBox>
                           <children>
                              <Label text="Mã sản phẩm: " textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                              <Label id="lblMaSanPham" fx:id="lblMaSanPham" text="Mã sản phẩm" textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" fillHeight="false">
                           <children>
                              <Label text="Thương hiệu: " textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                              <Label id="lblThuongHieu" fx:id="lblThuongHieu" layoutX="10.0" layoutY="10.0" text="Thương hiệu" textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox spacing="7.0">
                     <children>
                        <HBox alignment="BOTTOM_LEFT" spacing="4.0">
                           <children>
                              <Label text="Giá nhập: " textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                              <Label id="lblGiaNhap" fx:id="lblGiaNhap" text="Giá nhập" textFill="#0030ff">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                              <Label text="VND" textFill="#0030ff">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox alignment="BOTTOM_LEFT" spacing="4.0">
                           <children>
                              <Label text="Giá bán: " textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                              <Label id="lblGiaBan" fx:id="lblGiaBan" text="Giá bán" textFill="RED">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                              <Label text="VND" textFill="RED">
                                 <font>
                                    <Font name="Segoe UI Semibold" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" spacing="7.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" fillHeight="false">
                           <children>
                              <Label text="Màu sắc: " textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                              <Label id="lblColor" fx:id="lblColor" text="Màu sắc" textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets left="3.0" right="7.0" />
                                 </HBox.margin>
                              </Label>
                              <VBox id="boxColor" fx:id="boxColor" fillWidth="false" prefHeight="13.0" prefWidth="13.0" style="-fx-background-color: black; -fx-background-radius: 3; -fx-border-radius: 2; -fx-border-color: #2EC3E9; -fx-border-width: 1;" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0">
                           <children>
                              <Label text="Kích thước: " textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                              <VBox id="boxSize" alignment="CENTER">
                                 <children>
                                    <Label id="lblSize" fx:id="lblSize" text="Kích thước" textFill="#6d6e71">
                                       <font>
                                          <Font name="Segoe UI" size="12.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox layoutX="450.0" layoutY="10.0" spacing="7.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" fillHeight="false">
                           <children>
                              <Label text="Số lượng: " textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                              <Label id="lblSoLuong" fx:id="lblSoLuong" layoutX="10.0" layoutY="10.0" text="Số lượng" textFill="#6d6e71">
                                 <font>
                                    <Font name="Segoe UI" size="12.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="9.0" left="9.0" right="9.0" top="9.0" />
   </padding>
</fx:root>
